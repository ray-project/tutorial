git clone https://github.com/ray-project/qreader
cd qreader; npm install; npm run build
cd ..
# enable nbserverproxy
jupyter serverextension enable --sys-prefix nbserverproxy
# install the webserver extension so that
# flask launches at startup
mv webserverextension.py ${NB_PYTHON_PREFIX}/lib/python*/site-packages/
# enable webserver extension
jupyter serverextension enable --sys-prefix webserverextension
